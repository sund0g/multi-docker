{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "sund0g/multi-client",
            "hostname": "client",
            "essential": false

        },
        {
            "name": "server",
            "image": "sund0g/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "sund0g/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "sund0g/multi-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ]

        }
    ],
    "links": [
        "client", 
        "server"
    ]
}